<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_profile_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/receiver_message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="4dp"
        android:background="@drawable/receiver_messages_layout"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/receiver_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recievers messages here"
            android:textColor="@android:color/black"
            android:maxWidth="288dp"/>

        <TextView
            android:id="@+id/receiver_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="23.00"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sender_message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="4dp"
        android:background="@drawable/sender_messages_layout"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/sender_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Senders messages here"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/sender_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="23.00"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/message_receiver_image_view_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="4dp"
        android:background="@drawable/receiver_messages_layout"
        android:orientation="vertical"
        android:paddingStart="6dp"
        android:paddingTop="6dp"
        android:paddingEnd="6dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/message_receiver_image_view"
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:background="#fafafa"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_launcher_foreground" />


        <TextView
            android:id="@+id/message_receiver_image_view_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            tools:text="23.00" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/message_sender_image_view_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="4dp"
        android:background="@drawable/sender_messages_layout"
        android:orientation="vertical"
        android:paddingStart="6dp"
        android:paddingTop="6dp"
        android:paddingEnd="6dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/message_sender_image_view"
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:background="#fafafa"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_launcher_foreground" />


        <TextView
            android:id="@+id/message_sender_image_view_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            tools:text="23.00" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/message_sender_doc_layout"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="4dp"
        android:background="@drawable/sender_messages_layout"
        android:orientation="vertical"
        android:paddingStart="6dp"
        android:paddingTop="6dp"
        android:paddingEnd="6dp"
        android:paddingBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAFAFA"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fafafa"
                android:scaleType="centerCrop"
                android:src="@drawable/file" />

            <TextView
                android:id="@+id/message_sender_doc_text"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                tools:text="PDF" />

        </LinearLayout>

        <TextView
            android:id="@+id/message_sender_doc_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            tools:text="23.00" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/message_receiver_doc_layout"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="4dp"
        android:background="@drawable/receiver_messages_layout"
        android:orientation="vertical"
        android:paddingStart="6dp"
        android:paddingTop="6dp"
        android:paddingEnd="6dp"
        android:paddingBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAFAFA"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fafafa"
                android:scaleType="centerCrop"
                android:src="@drawable/file" />

            <TextView
                android:id="@+id/message_receiver_doc_text"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                tools:text="PDF" />

        </LinearLayout>

        <TextView
            android:id="@+id/message_receiver_doc_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            tools:text="23.00" />

    </LinearLayout>

</RelativeLayout>